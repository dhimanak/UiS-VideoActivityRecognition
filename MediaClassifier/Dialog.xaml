<Window x:Class="MediaClassifier.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaClassifier"
        mc:Ignorable="d"
        Title="Create Category" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Enter class name"  Margin="35,15,5,5" Width="236"/>
            <TextBox Name="ResponseTextBox" Width="200" Margin="0,5,5,5" />
            <Button Content="OK" Margin="5" Width="100" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
